ACCUMULO_REPO=$1
ACCUMULO_TESTING_REPO=$2
MUCHOS_REPO=$3


if [ ! -d "../accumulo" ]; then

	# if accumulo is not found locally
	# we will clone the given accumulo repository
	cd .. # change this path 
	git clone $ACCUMULO_REPO
fi

cd ../accumulo
mvn clean package -DskipFormat -PskipQA

if [ -d "./assemble/target" ]; then

	if [ ! -f "./*.gz" ]; then	
	#copies the tarball to the given muchos directory
	#tarball does not exist
	cp ./assemble/target/*.gz ../$MUCHOS_REPO/conf/upload/ && echo "accumulo tarball copied to fluo-muchos"
	fi

	#sets up the cluster
	cd ../$MUCHOS_REPO
	./bin/muchos launch -c "$USER-cluster" && echo Launching Cluster
	sleep 3m # must wait for nodes to initialize on EC2
	./bin/muchos setup

	CLUSTERUSER=`./bin/muchos config -p cluster_user`
	PROXYIP=`./bin/muchos config -p proxy.public.ip`
	
	# clones and builds accumulo-testing to EC2
	ssh $CLUSTERUSER@$PROXYIP "git clone https://github.com/apache/accumulo-testing.git &"
	ssh $CLUSTERUSER@$PROXYIP "cd accumulo-testing && mvn clean package"

else
       # can probably remove this	
	echo "Tarball not found."
fi



